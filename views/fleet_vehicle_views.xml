<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="sworkshop.vehicle_tree">
      <field name="name">Vehicle List</field>
      <field name="model">fleet.vehicle</field>
      <field name="inherit_id" ref="fleet.fleet_vehicle_view_tree"></field>
      <field name="mode">primary</field>
      <field name="arch" type="xml">
        <xpath expr="//tree/field[@name='category_id']" position="before">
          <field name="owner_id"/>
        </xpath>
        <xpath expr="//tree/field[@name='driver_id']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//tree/field[@name='future_driver_id']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="sworkshop.vehicle_form">
      <field name="name">Vehicle Form</field>
      <field name="model">fleet.vehicle</field>
      <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"></field>
      <field name="mode">primary</field>
      <field name="arch" type="xml">
        <xpath expr="//form/header/field[@name='state_id']" position="attributes">
          <attribute name="invisible">True</attribute>
          <!-- <field name="workshop_state_id"  widget="statusbar" options="{'clickable': '1'}"/> -->
        </xpath>
        <xpath expr="//form/sheet/group/group/field[@name='driver_id']" position="replace">
          <field name="owner_id"/>
        </xpath>
        <xpath expr="//form/sheet/group/group/field[@name='future_driver_id']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="sworkshop.action_vehicle_window">
      <field name="name">Vehicle</field>
      <field name="res_model">fleet.vehicle</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="sworkshop.action_view_vehicle_tree">
      <field name="sequence" eval="1"></field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="sworkshop.vehicle_tree"></field>
      <field name="act_window_id" ref="sworkshop.action_vehicle_window"></field>
    </record>

    <record model="ir.actions.act_window.view" id="sworkshop.action_view_vehicle_form">
      <field name="sequence" eval="2"></field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="sworkshop.vehicle_form"></field>
      <field name="act_window_id" ref="sworkshop.action_vehicle_window"></field>
    </record>

  </data>
</odoo>
